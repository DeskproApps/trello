{
  "name": "@deskpro-apps/trello",
  "title": "Trello",
  "description": "Integrate Trello with your helpdesk to improve your management of your tasks",
  "version": "1.0.0",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{
    "target": "ticket_sidebar",
    "entrypoint": "index.html"
  }],
  "settings": {
    "client_key": {
      "title": "Client Key",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false
    },
    "secret": {
      "title": "Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true
    }
  },
  "entityAssociations": {
    "linkedTrelloCards": {
      "title": "Linked Trello Card",
      "entity": "ticket",
      "type": "external_id"
    }
  },
  "proxy": {
    "whitelist": [{
      "url": "https://api.trello.com/.*",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "timeout": 10
    }]
  }
}
